<Window x:Class="WeeklyToDo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeeklyToDo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="LightGray">
    <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Top Buttons -->
            <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="URGENT" Background="LightBlue" Width="150" Height="40" Margin="10"/>
                <Button Content="DAILY" Background="LightBlue" Width="150" Height="40" Margin="10"/>
            </StackPanel>

            <!-- Weekday Buttons -->
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="SUN" Background="LightBlue" Width="60" Margin="5"/>
                <Button Content="MON" Background="LightBlue" Width="60" Margin="5"/>
                <Button Content="TUES" Background="LightBlue" Width="60" Margin="5"/>
                <Button Content="WED" Background="LightBlue" Width="60" Margin="5"/>
                <Button Content="THURS" Background="LightBlue" Width="60" Margin="5"/>
                <Button Content="FRI" Background="LightBlue" Width="60" Margin="5"/>
                <Button Content="SAT" Background="LightBlue" Width="60" Margin="5"/>
            </StackPanel>

            <!-- ListBox -->
            <ListBox Grid.Row="2" Grid.Column="0" Margin="10" />

            <!-- TextBoxes -->
            <StackPanel Grid.Row="2" Grid.Column="1" Margin="10" VerticalAlignment="Top">
                <TextBox Margin="0,5" Height="30"/>
                <TextBox Margin="0,5" Height="30"/>
                <TextBox Margin="0,5" Height="30"/>
                <TextBox Margin="0,5" Height="30"/>
                <TextBox Margin="0,5" Height="30"/>
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                <Button Content="ADD" Background="Green" Foreground="White" Width="80" Height="40" Margin="5"/>
                <Button Content="DELETE" Background="Red" Foreground="White" Width="80" Height="40" Margin="5"/>
                <Button Content="EDIT" Background="RoyalBlue" Foreground="White" Width="80" Height="40" Margin="5"/>
            </StackPanel>
        </Grid>
    </Window>

